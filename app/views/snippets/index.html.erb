
<% if user_signed_in? %>
  <h2><%= link_to 'New Snippet', new_snippet_path %></h2>
<% end %>
<br />

<table>
  <tr>
    <th>Name</th>
    <th>Language</th>
    <th>Author</th>
    <th>Description</th>
    <th>CreatedAt</th>
    <th></th>
    <th></th>
  </tr>

<% @snippets.each do |snippet| %>
  <tr>
    <td><%=link_to snippet.name,snippet %></td>
    <td><%=link_to snippet.lan_name,snippet.category %></td>
    <td><%= link_to snippet.author, "#" %>
    <td><%= snippet.description %></td>
    <td><%= snippet.created_at.strftime("%Y-%m-%-d %H::%M::%S") %></td>
    <td><%= link_to 'Edit', edit_snippet_path(snippet) %></td>
    <td><%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


