<%= form_for(@snippet) do |f| %>
  <% if @snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% @snippet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "代码名称" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "选择语言类别" %><br />
    <%= f.select :language, languages, { :include_blank => true } %>
  </div>
    <div class="field">
    <%= f.label "你的代码" %><br />
    <%= f.text_area :source_code ,:class =>"code_text", :placeholder=>"复制您的代码到此..." %>
  </div>
  <div class="field">
    <%= f.label "描述" %><br />
    <%= f.text_area :description ,:class =>"desc_area",:placeholder => "为您的代码添加描述" %>
  </div>


  <div class="actions">
    <%= f.submit "添加",:class=>"btn" %>
  </div>
<% end %>
